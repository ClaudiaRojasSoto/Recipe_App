<div class="contRecipeDetails">
    <h1>Recipe <%= @recipe_data.id %> details</h1>
    <h2><%= @recipe_data.name %></h2>

    <div class="contRecip1">
        <p>Preparation time: <%= @recipe_data.preparation_time %> hour</p>
        <button class="btnPublic">Edit</button>
    </div>

    <p>Cooking time: <%= @recipe_data.cooking_time %> hours</p>
    
    <p><%= @recipe_data.description %></p>

    <div class="contRecip2">
        <button class="btnGenerate">Generate shopping list</button>
        <button class="btnAdd">Add ingredient</button>
    </div>

   
</div>